<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.YH.travelaccount.user.mapper.UserMapper">

    <select id="findById" parameterType="long" resultType="com.YH.travelaccount.user.domain.User">
        SELECT
            id,
            email,
            password,
            name,
            created_at,
            updated_at,
            is_active
        FROM user
        WHERE id = #{id}
    </select>

</mapper>
